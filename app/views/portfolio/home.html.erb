<div>
		<canvas id="portfolio_graph" width="50" height="50">
		<script>
			$(document).ready(function(){
				var ctx = $("#portfolio_graph").get(0).getContext("2d");

				//pie chart data
				//sum of values = 360
				var data = [
					{
						value: <%= @portfolio[1] %>,
						color: "#563D7C",
						highlight: "purple",
						label: "CSS"
					},
					{
						value: <%= @portfolio[3] %>,
						color: "brown",
						highlight: "brown",
						label: "CoffeeScript"
					},
					{
						value: <%= @portfolio[5] %>,
						color: "#E44B23",
						highlight: "orange",
						label: "HTML"
					},
					{
						value: <%= @portfolio[7] %>,
						color: "#F1E05A",
						highlight: "yellow",
						label: "JavaScript"
					},
					{
						value: <%= @portfolio[9] %>,
						color: "#701516",
						highlight: "red",
						label: "Ruby"
					}
				];

				//draw
				var piechart = new Chart(ctx).Pie(data);
			});
		</script>
		</div>

